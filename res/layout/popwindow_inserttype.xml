<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/edit_pic_type"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
    <LinearLayout 
	    android:id="@+id/edit_insert_pic"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:gravity="center"
	    android:layout_weight="1"
	    android:background="@drawable/edit_click_effect_selector"
	    >
        <ImageView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@color/transparent"
	        android:scaleType="fitCenter" 
	        android:gravity="center|center_vertical"
	        android:src="@drawable/edit_pic_pic" />
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="图片"
            android:textColor="@color/toptextcolor"
            android:gravity="center"/>
    </LinearLayout>
        
    <LinearLayout 
        android:id="@+id/edit_insert_face"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@drawable/edit_click_effect_selector"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:scaleType="fitCenter" 
            android:gravity="center|center_vertical"
            android:src="@drawable/edit_face_pic"/>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="表情"
            android:textColor="@color/toptextcolor"
            android:gravity="center"/>
    </LinearLayout>
        
    <LinearLayout 
        android:id="@+id/edit_insert_space"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@drawable/edit_click_effect_selector"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:scaleType="fitCenter" 
            android:gravity="center|center_vertical"
            android:src="@drawable/edit_space"/>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="空格"
            android:textColor="@color/toptextcolor"
            android:gravity="center"/>
	</LinearLayout>
	    
    <LinearLayout 
        android:id="@+id/edit_insert_newline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@drawable/edit_click_effect_selector"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:scaleType="fitCenter" 
            android:gravity="center|center_vertical"
            android:src="@drawable/edit_newline"/>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="换行"
            android:textColor="@color/toptextcolor"
            android:gravity="center"/>
	</LinearLayout>
</LinearLayout>