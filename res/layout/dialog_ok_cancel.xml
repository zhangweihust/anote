<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="240dp"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_bar_background"
        android:gravity="center"
        android:text="提示"
        android:textColor="@color/white"
        android:textSize="@dimen/dialog_title" />

    <TextView
        android:id="@+id/dialog_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="信息"
        android:textColor="@color/dialog_items_color"
        android:textSize="@dimen/dialog_items" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:layout_gravity="center"
        android:background="@drawable/listview_divider" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="5dp" >

        <Button
            android:id="@+id/dialog_btn_ok"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_selector"
            android:text="@string/dialog_ok"
            android:textColor="@color/white"
            android:textSize="@dimen/dialog_btn" />

        <Button
            android:id="@+id/dialog_btn_cancel"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:background="@drawable/button_selector"
            android:text="@string/dialog_cancel"
            android:textColor="@color/white"
            android:textSize="@dimen/dialog_btn" />
    </LinearLayout>

</LinearLayout>