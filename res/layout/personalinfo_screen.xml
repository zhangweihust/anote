<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="match_parent"
	android:orientation="vertical" android:background="#ffffffff">
	<LinearLayout android:id="@+id/bottom" style="@android:style/ButtonBar"
		android:layout_width="fill_parent" android:layout_height="42.5dp"
		android:layout_alignParentBottom="true" android:background="@drawable/handwrite_btn_bg"
		android:gravity="center_horizontal" android:orientation="horizontal"
		android:visibility="gone">
	</LinearLayout>
	<FrameLayout android:layout_width="match_parent"
		android:layout_height="match_parent" android:orientation="vertical"
		android:layout_above="@id/bottom">
		<LinearLayout android:layout_width="match_parent"
			android:layout_height="match_parent" android:orientation="vertical"
			android:gravity="center_horizontal" android:background="@drawable/album_background">
			<RelativeLayout android:id="@+id/relativeLayout1"
				android:layout_width="fill_parent" android:layout_height="46dp"
				android:background="@drawable/title_bar_background"
				android:descendantFocusability="blocksDescendants" android:gravity="center_vertical"
				android:orientation="horizontal">
				<ImageButton android:id="@+id/back"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:layout_alignParentLeft="true"
					android:layout_centerVertical="true" android:layout_marginLeft="9dp"
					android:layout_weight="0" android:background="@drawable/screen_go_back" />
				<TextView android:id="@+id/activityTitle"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:layout_centerInParent="true" android:layout_centerVertical="true"
					android:layout_weight="1" android:ellipsize="end" android:gravity="center_horizontal"
					android:singleLine="true" android:text="@string/personal_info_title"
					android:textColor="#FFFFFF" android:textSize="@dimen/main_screen_title_size" />
				<LinearLayout android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentRight="true"
					android:layout_centerVertical="true" android:layout_marginRight="9dp"
					android:layout_weight="0" android:focusable="false"
					android:gravity="center" android:orientation="vertical">
				</LinearLayout>
			</RelativeLayout>
			<LinearLayout
				android:layout_width="300dp"
				android:layout_height="84dp"
				android:layout_marginTop="8dp" 
				android:background="@drawable/setting_background" >
				<LinearLayout android:id="@+id/set_avatar_layout"
					android:layout_width="match_parent"
					android:layout_height="match_parent" android:gravity="center_vertical"
					android:background="@android:drawable/list_selector_background" >
						<ImageView android:id="@+id/user_avatar"
							android:layout_width="58dp" android:layout_height="58dp"
							android:layout_marginLeft="12dp" />
						<TextView android:id="@+id/set_avatar"
							android:layout_width="wrap_content" android:layout_height="wrap_content"
							android:layout_weight="1" android:ellipsize="end"
							android:layout_marginLeft="12dp" android:singleLine="true"
							android:text="@string/personal_info_set_avatar" android:textColor="#555555"
							android:textSize="16dp" />
	
						<ImageView android:layout_width="wrap_content"
							android:layout_height="wrap_content" android:layout_marginRight="12dp"
							android:src="@drawable/arrow_right" />
				</LinearLayout>
			</LinearLayout>
			<LinearLayout android:layout_width="300dp"
				android:layout_height="wrap_content" android:orientation="vertical"
				android:layout_marginTop="8dp" android:background="@drawable/setting_background">
				<LinearLayout android:id="@+id/name_layout"
					android:layout_width="fill_parent" android:layout_height="42dp"
					android:gravity="center_vertical" 
					android:background="@android:drawable/list_selector_background" >
					<TextView
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:layout_weight="1" android:ellipsize="end"
						android:layout_marginLeft="12dp" android:singleLine="true"
						android:text="@string/personal_info_name" android:textColor="#555555"
						android:textSize="16dp" />
					<EditText android:id="@+id/user_name"
						android:layout_width="180dp" android:layout_height="wrap_content"
						android:layout_marginRight="12dp" 
						android:background="#00000000" 
						android:gravity="right"/>
				</LinearLayout>
				<ImageView android:layout_width="fill_parent"
					android:layout_height="1.0px" android:scaleType="fitXY"
					android:src="@drawable/new_track" />
				<LinearLayout android:id="@+id/sex_layout"
					android:layout_width="fill_parent" android:layout_height="42dp"
					android:gravity="center_vertical" 
					android:background="@android:drawable/list_selector_background">
					<TextView android:id="@+id/user_sex"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:layout_weight="1" android:ellipsize="end"
						android:layout_marginLeft="12dp" android:singleLine="true"
						android:text="@string/personal_info_sex" android:textColor="#555555"
						android:textSize="16dp" />
					<RadioGroup android:id="@+id/radioGroup"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:gravity="center"
						android:orientation="horizontal" 
						android:layout_marginRight="12dp">
						<RadioButton android:layout_width="wrap_content"
							android:layout_height="wrap_content" android:id="@+id/radioFemale"
							android:text="@string/personal_info_sex_female"  
							android:textColor="#ff000000"
				            android:checked="true"
				            style="@style/CustomLeftRadioBtn"
							/>
							
						<RadioButton android:layout_width="wrap_content"
							android:layout_height="wrap_content" android:id="@+id/radioMale"
							android:layout_marginLeft="10dp"
							android:text="@string/personal_info_sex_male" 
							android:textColor="#ff000000"
							style="@style/CustomLeftRadioBtn"
							/>
					</RadioGroup>
				</LinearLayout>
				<ImageView android:layout_width="fill_parent"
					android:layout_height="1.0px" android:scaleType="fitXY"
					android:src="@drawable/new_track" />
				<LinearLayout android:id="@+id/region_layout"
					android:layout_width="fill_parent" android:layout_height="42dp"
					android:gravity="center_vertical" 
					android:background="@android:drawable/list_selector_background">
					<TextView
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:layout_weight="1" android:ellipsize="end"
						android:layout_marginLeft="12dp" android:singleLine="true"
						android:text="@string/personal_info_region" android:textColor="#555555"
						android:textSize="16dp" />
					<TextView android:id="@+id/user_region"
						android:layout_width="180dp" android:layout_height="wrap_content"
						android:layout_marginRight="12dp" 
						android:background="#00000000" android:textColor="#555555"
						android:gravity="right"/>
					<ImageView android:layout_width="wrap_content"
						android:layout_height="wrap_content" android:layout_marginRight="12dp"
						android:src="@drawable/arrow_right" />
				</LinearLayout>
			</LinearLayout>
		</LinearLayout>
	</FrameLayout>
</RelativeLayout>