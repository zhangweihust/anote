<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/edit_setting_type"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
    <LinearLayout 
	    android:id="@+id/edit_setting_color"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:gravity="center"
	    android:layout_weight="1"
	    android:background="@drawable/edit_click_effect_selector"
	    >
        <ImageView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@color/transparent"
	        android:scaleType="fitCenter" 
	        android:src="@drawable/edit_setting_color"/>
	        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="颜色"
            android:textColor="@color/toptextcolor"
            android:gravity="center"/>
    </LinearLayout>
        
    <LinearLayout 
        android:id="@+id/edit_setting_thickness"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@drawable/edit_click_effect_selector"
        >

        <ImageView
            android:id="@+id/thickness_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter" 
            android:background="@color/transparent"
            android:gravity="center"
            android:src="@drawable/edit_setting_thickness"/>
        <TextView 
            android:id="@+id/thickness_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="粗细"
            android:textColor="@color/toptextcolor"
            android:gravity="center"/>
    </LinearLayout>
        
