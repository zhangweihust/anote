<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/edit_input_type"
    android:layout_width="196dp"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
    <LinearLayout 
	    android:id="@+id/edit_type_graffit"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:gravity="center"
	    android:layout_weight="1"
	    android:background="@drawable/edit_click_effect_selector"
	    >
	    <ImageView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@color/transparent"
	        android:scaleType="fitCenter" 
	        android:gravity="center|center_vertical"
	        android:src="@drawable/edit_graffit_input"/>
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="涂鸦"
	        android:textColor="@color/toptextcolor"
	        android:gravity="center"/>
    </LinearLayout>
    
    <LinearLayout 
        android:id="@+id/edit_type_soft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@drawable/edit_click_effect_selector"
        >

	    <ImageView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@color/transparent"
	        android:scaleType="fitCenter" 
	        android:gravity="center|center_vertical"
	        android:src="@drawable/edit_soft_input"/>
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="键盘"
	        android:textColor="@color/toptextcolor"
	        android:gravity="center"/>
    </LinearLayout>

    <LinearLayout 
	    android:id="@+id/edit_type_handwrite"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_weight="1"
	    android:gravity="center"
	    android:orientation="vertical"
	    android:background="@drawable/edit_click_effect_selector"
	    >
	    <ImageView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@color/transparent"
	        android:scaleType="fitCenter" 
	        android:gravity="center|center_vertical"
	        android:src="@drawable/edit_handwrite_input"/>
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="手写"
	        android:textColor="@color/toptextcolor"
	        android:gravity="center"/>
    </LinearLayout>
</LinearLayout>